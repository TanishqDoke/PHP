<body>
    <div class="container">
        <h1>Assignment Operators</h1>
        <?php
        echo"<br>";
        $variable1=25;

        //assignment operator "="
        $newvar=$variable1;
        echo $newvar;
        echo"<br>";

        //assignment operator "+="
        $newvar+=2;
        echo $newvar;
        echo"<br>";

        //assignment operator "-="
        $newvar-=5;
        echo $newvar;
        echo"<br>";

        //assignment operator "*="
        $newvar*= 2;
        echo $newvar;
        echo"<br>";

        //assignment operator "/="
        $newvar/= 2;
        echo $newvar;
        echo"<br>";
        ?>
    </div>
</body>
</html>
