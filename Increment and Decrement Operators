<body>
    <div class="container">
        <h1>Increment/Decrement Operator</h1>
        <?php
        echo"<br>";
        $variable1=25;
        echo "Original Value is $variable1";
        echo"<br>";

        $variable1++;
        echo "Post increment $variable1";
        echo"<br>";

        $variable1--;
        echo "Post decrement $variable1";
        echo"<br>";

        ++ $variable1;
        echo "Pre increment $variable1";
        echo"<br>";

        -- $variable1;
        echo "Pre decrement $variable1";
        echo"<br>";

       
        ?>
    </div>
</body>
